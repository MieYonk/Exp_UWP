<Page
    x:Class="Experiment_1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Experiment_1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Width="288" TextWrapping="Wrap" Text="Image List" TextAlignment="Center" VerticalAlignment="Top" FontSize="30" Height="47"/>
            <TextBlock TextWrapping="Wrap" Text="Image Preview" TextAlignment="Center" VerticalAlignment="Top" FontSize="30" Height="47" Grid.Column="1"/>

            <!-- 使用 ListBox 并监听 SelectionChanged -->
            <ListBox x:Name="ImageList" Height="675" Background="AliceBlue" VerticalAlignment="Top" Margin="0,45,0,0" SelectionChanged="ImageList_SelectionChanged">
                <ListBoxItem Content="Image 1" Tag="/Assets/img1.png"/>
                <ListBoxItem Content="Image 2" Tag="/Assets/img2.png"/>
                <ListBoxItem Content="Image 3" Tag="/Assets/img3.png"/>
            </ListBox>

            <Image x:Name="Image_Preview" Grid.Column="1" HorizontalAlignment="Center" Height="675" VerticalAlignment="Top" Width="843" Margin="0,45,0,0">

            </Image>
        </Grid>
    </Grid>
</Page>